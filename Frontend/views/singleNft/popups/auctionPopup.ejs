<div id="auction-popup" class="popup" style="display: none;">
  <div class="popup-content" style="position: relative;">
    <span id="close-auction-popup" style="position: absolute; top: 10px; right: 10px; cursor: pointer; font-size: 24px;">&times;</span>

    <!-- Regular Auction Section -->
    <div id="regular-auction-section">
      <h2>List your NFT for auction</h2>
      <p>Set your desired starting price and the duration of the auction.</p>

      <!-- Tab navigation -->
      <div class="popup-tabs" style="margin-top: 20px;">
        <button class="popup-tab active">Regular Auction</button>
        <button id="tab-dutch" class="popup-tab">Dutch Auction</button>
      </div>
      
      <div class="popup-field">
        <label for="auction-starting-price"><strong>Starting Price (ETH):</strong></label>
        <input type="number" id="auction-starting-price" placeholder="e.g. 0.5" min="0" step="0.01" />
      </div>

      <div class="popup-field">
        <label for="auction-end-date"><strong>End Date:</strong></label>
        <input type="date" id="auction-end-date" />
      </div>

      <div class="popup-field">
        <label for="auction-end-time"><strong>End Time:</strong></label>
        <input type="time" id="auction-end-time" />
      </div>

      <div class="popup-buttons" style="margin-top: 15px;">
        <button id="confirm-auction-start" class="blue-btn">Start auction</button>
      </div>

      <div id="start-auction-status" style="margin-top: 10px; font-weight: bold;"></div>
    </div>

    <!-- Dutch Auction Section -->
    <div id="dutch-auction-section" style="display: none;">
      <h2>List your NFT for Dutch auction</h2>
      <p>Set the price drop parameters and end time for your Dutch auction.</p>

      <!-- Tab navigation -->
      <div class="popup-tabs" style="margin-top: 20px;">
        <button id="tab-regular" class="popup-tab">Regular Auction</button>
        <button class="popup-tab active">Dutch Auction</button>
      </div>

      <div class="popup-field">
        <label for="dutch-start-price"><strong>Start Price (ETH):</strong></label>
        <input type="number" id="dutch-start-price" placeholder="e.g. 1.0" min="0" step="0.01" />
      </div>

      <div class="popup-field">
        <label for="dutch-end-price"><strong>End Price (ETH):</strong></label>
        <input type="number" id="dutch-end-price" placeholder="e.g. 0.2" min="0" step="0.01" />
      </div>

      <div class="popup-field">
        <label for="dutch-end-date"><strong>End Date:</strong></label>
        <input type="date" id="dutch-end-date" />
      </div>

      <div class="popup-field">
        <label for="dutch-end-time"><strong>End Time:</strong></label>
        <input type="time" id="dutch-end-time" />
      </div>

      <div class="popup-buttons" style="margin-top: 15px;">
        <button id="confirm-dutch-auction-start" class="blue-btn">Start Dutch auction</button>
      </div>

      <div id="start-dutch-auction-status" style="margin-top: 10px; font-weight: bold;"></div>
    </div>
  </div>
    <script>
      document.getElementById('tab-regular').addEventListener('click', function() {
        document.getElementById('regular-auction-section').style.display = 'block';
        document.getElementById('dutch-auction-section').style.display = 'none';
        this.classList.add('active');
        document.getElementById('tab-dutch').classList.remove('active');
      });

      document.getElementById('tab-dutch').addEventListener('click', function() {
        document.getElementById('regular-auction-section').style.display = 'none';
        document.getElementById('dutch-auction-section').style.display = 'block';
        this.classList.add('active');
        document.getElementById('tab-regular').classList.remove('active');
      });
    </script>
</div>